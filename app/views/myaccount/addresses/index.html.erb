<hr style='color:#aac;'/>
<% if @addresses.empty? %>
  <p>
    <%= I18n.t(:no_addresses_saved) %>
  </p>
<% else %>
  <% for address in @addresses %>
    <div class='row'>
      <div class='twelve columns last'>
        <ul>
          <li><span class="bold black"><%= address.name %></span></li>
          <li>
            <% address.address_lines_array.each do |line| %>
              <%= line %><br/>
            <% end %>
          </li>
          <li><%= address.city_state_zip %></li>
          <li><%= address.phone_number %></li>
        </ul>
        <%= link_to "Edit", edit_myaccount_address_path(address), :class => "button small bottom10" %>
        <%= link_to "Remove", myaccount_address_path(address), :confirm => 'Are you sure?', :method => :delete, :class => "button small" %>
      </div>
    </div>
    <hr style='color:#aac;'/>
  <% end %>
  <%= will_paginate @addresses %>

<% end %>

<p class='top20'><%= link_to "New Address", new_myaccount_address_path, :class => "button" %></p>
